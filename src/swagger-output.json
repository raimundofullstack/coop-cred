{
  "openapi": "3.0.0",
  "info": {
    "title": "CoopCred API",
    "description": "API RESTful da Cooperativa de Crédito",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "Gerenciamento de usuários (registro, login, perfil)"
    },
    {
      "name": "Accounts",
      "description": "Contas e saldos"
    },
    {
      "name": "Transactions",
      "description": "Depósitos, saques e transferências"
    },
    {
      "name": "Reports",
      "description": "Relatórios e agregações financeiras"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Registro de novo usuário",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "example": "any"
                  },
                  "email": {
                    "example": "any"
                  },
                  "password": {
                    "example": "any"
                  },
                  "role": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Realizando Login na conta",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  },
                  "password": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/accounts/": {
      "post": {
        "tags": [
          "Accounts"
        ],
        "description": "Cria uma nova conta bancária",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "accountType": {
                    "example": "any"
                  },
                  "creditLimit": {
                    "example": "any"
                  },
                  "goalDescription": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Accounts"
        ],
        "description": "Listar tdodas as contas bancárias",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/accounts/{id}": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "description": "Listar uma conta bancária específica",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/transactions/deposit": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "description": "Depósito na conta",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "accountId": {
                    "example": "any"
                  },
                  "amount": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transactions/withdraw": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "description": "Saque da conta",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "accountId": {
                    "example": "any"
                  },
                  "amount": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transactions/transfer": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "description": "Transferências entre contas",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fromAccountId": {
                    "example": "any"
                  },
                  "toAccountId": {
                    "example": "any"
                  },
                  "amount": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transactions/account/{accountId}": {
      "get": {
        "tags": [
          "Transactions"
        ],
        "description": "Detalhes sobre depósitos, saques e transferências entre contas",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/reports/totals/{accountId}": {
      "get": {
        "tags": [
          "Reports"
        ],
        "description": "Relatórios financeiros e agregações",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "Token JWT no formato: Bearer <token>"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}